<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>NBN Gateway Frontend</display-name>
       
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
 
    <servlet>
        <servlet-name>spring-mvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!--Create the Powerless Servlet-->
    <servlet>
        <servlet-name>freemarker</servlet-name>
        <servlet-class>uk.gov.nbn.data.powerless.PowerlessServlet</servlet-class>
        <!-- FreemarkerServlet settings: -->
        <init-param>
            <param-name>TemplatePath</param-name>
            <param-value>/</param-value>
        </init-param>
        <init-param>
            <param-name>NoCache</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>ContentType</param-name>
            <param-value>text/html; charset=UTF-8</param-value>
            <!-- Forces UTF-8 output encoding! -->
        </init-param>
        <!-- FreeMarker settings: -->
        <init-param>
            <param-name>template_update_delay</param-name>
            <param-value>0</param-value>
            <!-- 0 is for development only! Use higher value otherwise. -->
        </init-param>
        <init-param>
            <param-name>default_encoding</param-name>
            <param-value>ISO-8859-1</param-value>
            <!-- The encoding of the template files. -->
        </init-param>
        <init-param>
            <param-name>number_format</param-name>
            <param-value>0.##########</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--Define servlet hosting-->
    <welcome-file-list>
        <welcome-file>index.ftl</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>PowerlessTemplateURLParameterisationFilter</filter-name>
        <filter-class>uk.gov.nbn.data.powerless.PowerlessTemplateURLParameterisationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PowerlessTemplateURLParameterisationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PowerlessRemoteAPIExceptionFilter</filter-name>
        <filter-class>uk.gov.nbn.data.powerless.PowerlessJSONReaderStatusExceptionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PowerlessRemoteAPIExceptionFilter</filter-name>
        <url-pattern>*.ftl</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PowerlessTemplateExceptionFilter</filter-name>
        <filter-class>uk.gov.nbn.data.powerless.PowerlessTemplateExceptionFilter</filter-class>
    </filter>
    <servlet-mapping>
        <servlet-name>spring-mvc</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>freemarker</servlet-name>
        <url-pattern>*.ftl</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>PowerlessTemplateExceptionFilter</filter-name>
        <url-pattern>*.ftl</url-pattern>
    </filter-mapping>
    <!--Define custom error pages -->
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/unavailable-pages/401.ftl</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/unavailable-pages/404.ftl</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/unavailable-pages/500.ftl</location>
    </error-page>
    <error-page>
        <exception-type>java.io.FileNotFoundException</exception-type>
        <location>/WEB-INF/unavailable-pages/data-service-not-responding.ftl</location>
    </error-page>
</web-app>
