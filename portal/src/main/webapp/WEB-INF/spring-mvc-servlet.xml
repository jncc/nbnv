<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Scans the classpath of this application for @Components to deploy as beans -->			
    <context:component-scan base-package="uk.gov.nbn.data.portal"/>

    <!-- Configures the @Controller programming model -->
    <mvc:annotation-driven/>
    
    <!-- Handles HTTP GET requests for Powerless templates and resources -->
    <mvc:resources mapping="/**" location="/" />

    <!--Adds the JSON bean to freemarker templates handled by Spring MVC-->
    <mvc:interceptors>
        <bean class="uk.gov.nbn.data.powerless.mvc.PowerlessRequestSpecificsInterceptor"/>
    </mvc:interceptors>
    
    <!--Sets the freemarker configuration -->
    <bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/WEB-INF/ftl/"/>
        <property name="freemarkerSettings">    
            <props>
                <prop key="number_format">0.######</prop>
            </props>
        </property>
    </bean>
    
    <!--Configurers the freemarker configuration with powerless beans-->
    <bean class="uk.gov.nbn.data.portal.config.PowerlessSpringMVCConfig">
        <constructor-arg ref="freemarkerConfig"/>
    </bean>

    <!--Defines what is a Spring MVC view-->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="cache" value="true"/>
        <property name="prefix" value=""/>
        <property name="suffix" value=".ftl"/>
        <property name="contentType" value="text/html;charset=UTF-8"/>
    </bean>
    
    <!-- Use validation-messages for errors-->
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="validation-messages" />
    </bean>
</beans>
